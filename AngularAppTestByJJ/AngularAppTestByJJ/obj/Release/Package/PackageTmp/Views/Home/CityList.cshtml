@{
    Layout = null;
}
<div id="AngularMultipleViews" class="container-fluid">
    <div class="row-fluid">
        <div class="col-sm-2">
            <div class="form-inline">
                <label class="label label-info">Search: </label>
                <input class="form-control" ng-model="query" />
            </div>
            <div class="form-group form-inline">
                <label class="label label-info">Sort by: </label>
                <select ng-model="orderProp" class="form-control">
                    <option value="name">Alphabetical</option>
                    <option value="population">Population</option>
                </select>
            </div>
        </div>
        <div class="col-sm-10">
            <ul class="cities">
                <li ng-repeat="city in cities| filter:query | orderby:orderprop" class="thumbnail">
                    <a href="#/cities/{{city.name}}" class="thumb"><img ng-src="{{city.pic}}" style="width:10%; height:10%"></a>
                    <label class="label label-primary">{{city.name}}</label>
                    <label class="label label-danger">{{city.country}}</label>
                    <label class="label label-success">{{city.population}}</label>
                </li>
            </ul>
        </div>
    </div>
</div>
